<view class="container">
  <view class='overage'>
    <view>
      <text class='overage-header'>我的余额(元)</text>
    </view>
    <view>
      <text class='overage-amount'>{{overage}}</text>
    </view>
    <view>
      <text bindtap='overageDesc' class=''overage-des>余额说明</text>
    </view>
  </view>
  <button bindtap='movetoCharge' class='btn-charge'>充值</button>
  <view class='my-ticker tapbar' bindtap='showTicker'>
    <text>我的用车券</text>
    <text><text class="c-g">{{ticket}}张</text>></text>
  </view>
  <view class='my-deposit tapbar' bindtap='showDeposit'>
    <text>我的押金</text>
    <text><text class="c-g">99元，押金退款</text>></text>
  </view>
  <view class='my-invcode tapbar' bindtap='showInvcode'>
    <text>关于ofo</text>
    <text>></text>
  </view>
</view>